<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
    <link rel="stylesheet" href="/styles/create_exercise.css" />
    <link rel="stylesheet" href="/styles/create.css" />
    <% if(type === "lesson") { %> <%-
    include('../partials/tinymce_lesson_scripts') %> <% } else { %> <%-
    include('../partials/tinymce_exercise_scripts') %> <% } %>
  </head>
  <body>
    <div class="overlay hide">
      <div class="overlay___center">
        <span class="close"><i class="fas fa-times-circle"></i></span>
        <div class="overlay___body">
          <h3></h3>
          <div class="overlay___content"></div>
        </div>
      </div>
    </div>
    <div class="menu-btn"><div class="menu-btn_burgir"></div></div>
    <aside><%- include('../partials/aside'); %></aside>
    <nav><%- include('../partials/nav'); %></nav>
    <header class="secondary">
      <h1><%=bannerTitle%></h1>
    </header>
    <div class="too-small">
      <p>Please enlarge browser window to continue editing this resource.</p>
    </div>
    <div class="create-wrapper">
      <%- include('../partials/resource_title_tags'); %>
      <div class="three-one-grid">
        <div>
          <%-include('../partials/question'); %>
          <%-include('../partials/correct_answer'); %>
          <%-include('../partials/create_choices'); %>
          <ul class="question_choices pop-top hide"></ul>
        </div>
        <%- include('../partials/publish_question_requirements'); %>
      </div>
      <div class="three-two-grid">
        <%- include('../partials/problem_set'); %> <%-
        include('../partials/publish_exercise_requirements'); %>
      </div>
    </div>
    <footer><%- include('../partials/footer'); %></footer>
    <%- include('../partials/universal_scripts'); %>
    <script src="/scripts/create.js"></script>
    <script type="module" src="/scripts/create_exercise.js"></script>
  </body>
</html>
