<section class="exercise_requirements">
  <div class="to_publish_add_question">
    <ul class="to_publish_reqs q">
      <h4>To publish this question</h4>
      <li id="question" class="not_met">
        <i class="fas fa-times-circle"></i>
        <p>Pose a unique question</p>
      </li>
      <li id="difficulty" class="not_met">
        <i class="fas fa-times-circle"></i>
        <p>Choose a difficulty</p>
      </li>
      <li id="create_correct_answer" class="not_met">
        <i class="fas fa-times-circle"></i>
        <p>Create the correct answer</p>
      </li>
      <li id="five_choices" class="not_met">
        <i class="fas fa-times-circle"></i>
        <p>Create at least 5 unique choices</p>
      </li>
    </ul>
    <%-include('../partials/add_img') %>
    <div id="add_delete_q_buttons">
      <button
        id="add_all"
        aria-label="Add all to exercise"
        title="Add all to exercise"
      >
        <i class="fas fa-plus-circle"></i>
        <p>Add All</p>
      </button>
      <div id="discard_all_slider">
        <button id="d_a1" aria-label="Discard all" title="Discard all">
          <i class="fas fa-trash"></i>
          <p>Discard All</p>
        </button>
        <div id="d_a2" data-hidden="true">
          <p>Type "yes" to continue</p>
          <button id="discard_btn_back" aria-label="Back" title="Back">
            <i class="fas fa-chevron-up"></i>
          </button>
          <input
            type="text"
            name="discard_confirm"
            id="discard_confirm"
            placeholder='Type "yes"'
          />
          <button id="discard_all" aria-label="Confirm" title="Confirm">
            Confirm
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
