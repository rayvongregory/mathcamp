<div class="textarea-wrapper">
  <label id="top" for="create_question">Question: </label>
  <div class="extra-options">
    <p class="hide">This question is not unique</p>
    <select name="difficulty" id="choose_difficulty">
      <option value="no_choice">Select a difficulty</option>
      <option value="easy">Easy</option>
      <option value="standard">Standard</option>
      <option value="hard">Hard</option>
      <option value="advanced">Advanced</option>
    </select>
    <span
      id="q_add"
      role="button"
      aria-label="Add question"
      title="Add question"
      ><i class="fas fa-plus-circle"></i
    ></span>
    <span id="q_discard" role="button" aria-label="Discard" title="Discard"
      ><i class="fas fa-trash"></i
    ></span>
  </div>
  <textarea id="create_question"></textarea>
  <ul class="question_section hide pop-top"></ul>
</div>
