<div class="auth-form">
  <form id="form" onsubmit="return false;">
    <div class="flexwrap">
      <label for="fname">First Name:</label>
      <input type="name" id="fname" placeholder="Enter first name" required />
    </div>
    <div class="flexwrap">
      <label for="lname">Last Name:</label>
      <input type="name" id="lname" placeholder="Enter last name" required />
    </div>
    <div class="flexwrap">
      <label for="email">Email:</label>
      <input type="email" id="email" placeholder="Enter email" required />
    </div>
    <div class="flexwrap">
      <label for="cemail">Confirm email:</label>
      <input type="email" id="cemail" placeholder="Re-enter email" required />
    </div>
    <div class="flexwrap">
      <label for="password">Password:</label>
      <input
        type="password"
        id="password"
        placeholder="Enter password"
        autocomplete="off"
        required
      />
    </div>
    <div class="flexwrap">
      <label for="cpassword">Confirm password:</label>
      <input
        type="password"
        id="cpassword"
        placeholder="Re-enter password"
        autocomplete="off"
        required
      />
    </div>
    <div id="response"></div>
    <div class="centerwrap">
      <button id="submit">Submit</button>
    </div>
    <p>Already have an account? <a href="/login">Log in here</a>!</p>
  </form>
</div>
