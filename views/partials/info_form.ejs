<h1 class="auth-form___header">Account Information</h1>
<div class="auth-form">
  <form id="form" onsubmit="return false;">
    <div class="flexwrap">
      <label for="fname">First Name:</label>
      <input
        type="name"
        id="fname"
        placeholder="Enter first name"
        class="hide"
      />
      <p></p>
      <button>Edit</button>
    </div>
    <div class="flexwrap">
      <label for="lname">Last Name:</label>
      <input
        type="name"
        id="lname"
        placeholder="Enter last name"
        class="hide"
      />
      <p></p>
      <button>Edit</button>
    </div>
    <div class="flexwrap">
      <label for="dname">Display Name:</label>
      <input
        type="name"
        id="dname"
        placeholder="Enter new display name"
        class="hide"
      />
      <p></p>
      <button>Edit</button>
    </div>
    <div class="flexwrap">
      <label for="email">Email:</label>
      <input
        type="email"
        id="email"
        placeholder="This does nothing but perserve the layout"
        class="hide"
      />
      <p></p>
      <button class="no-edit">Edit</button>
    </div>
    <div class="flexwrap">
      <label for="cemail">Contact email:</label>
      <input type="email" id="cemail" placeholder="Enter email" class="hide" />
      <p></p>
      <button>Edit</button>
    </div>
    <div class="flexwrap">
      <label for="cpassword">Current password:</label>
      <input
        type="password"
        id="cpassword"
        placeholder="Enter your current password"
        autocomplete="off"
        class="hide"
      />
      <p>✱✱✱✱✱✱✱✱✱</p>
      <button id="password">Edit</button>
    </div>
    <div class="flexwrap hide">
      <label for="npassword">New password:</label>
      <input
        type="password"
        id="npassword"
        placeholder="Enter a new password"
        autocomplete="off"
      />
      <!-- <p></p> -->
    </div>
    <div class="flexwrap hide">
      <label for="cnpassword">Confirm new password:</label>
      <input
        type="password"
        id="cnpassword"
        placeholder="Re-enter your new password"
        autocomplete="off"
      />
      <!-- <p></p> -->
    </div>
    <div id="response"></div>
    <div class="centerwrap">
      <button id="submit" class="no-click">Update</button>
    </div>
    <p>Want to delete your account? <a href="/delete">Click here</a>.</p>
  </form>
</div>
